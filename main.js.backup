  // Funkcja streamingowego wypeÅ‚niania pola tekstowego
async function streamFillField(elementId, text, options = {}) {
  const element = $(elementId);
  if (!element || !text) return;

  const {
    speed = 50, // ms miÄ™dzy znakami
    focus = false, // wyÅ‚Ä…czony focus - analiza w tle
    highlight = true // czy podÅ›wietliÄ‡ pole podczas wypeÅ‚niania
  } = options;

  // PodÅ›wietlenie bez focus (analiza w tle)
  if (highlight) {
    element.style.backgroundColor = '#fff3cd';
    element.style.borderColor = '#ffc107';
  }

  // WyczyÅ›Ä‡ pole
  element.value = '';

  // SprawdÅº czy to pole datetime-local - wymaga peÅ‚nej wartoÅ›ci naraz
  if (element.type === 'datetime-local') {
    // Dla pÃ³l datetime-local wypeÅ‚nij caÅ‚Ä… wartoÅ›Ä‡ naraz
    element.value = text;
    console.log(`âœ… WypeÅ‚niono pole datetime ${elementId}: "${text}"`);
  } else {
    // Dla innych pÃ³l wypeÅ‚nij tekst znak po znaku
    for (let i = 0; i < text.length; i++) {
      element.value += text[i];
      await new Promise(resolve => setTimeout(resolve, speed));
    }
    console.log(`âœ… WypeÅ‚niono pole ${elementId}: "${text}"`);
  }

  // UsuÅ„ podÅ›wietlenie
  if (highlight) {
    setTimeout(() => {
      element.style.backgroundColor = '';
      element.style.borderColor = '';
    }, 1000);
  }
}

