  // Funkcja pomocnicza do wypeÅ‚niania formularza na bieÅ¼Ä…co
// Funkcja pomocnicza do przenoszenia zdjÄ™Ä‡ uszkodzeÅ„
function transferDamagePhotosToField(fieldId, photos, prefix) {
  const field = $(fieldId);
  if (field && photos && photos.length > 0) {
    // Inicjalizuj listÄ™ jeÅ›li nie istnieje
    if (!field.__dataUrls) {
      field.__dataUrls = [];
    }
    
    // Dodaj nowe zdjÄ™cia do istniejÄ…cej listy
    const newPhotos = photos.map((photo, index) => ({
      name: `${prefix}_${field.__dataUrls.length + index + 1}.jpg`,
      dataUrl: photo,
      type: 'image/jpeg'
    }));
    
    // SprawdÅº limit 5 zdjÄ™Ä‡
    const totalPhotos = field.__dataUrls.length + newPhotos.length;
    if (totalPhotos > 5) {
      console.warn(`âš ï¸ Przekroczono limit 5 zdjÄ™Ä‡ dla ${fieldId}. Dodano tylko ${5 - field.__dataUrls.length} zdjÄ™Ä‡.`);
      const remainingSlots = 5 - field.__dataUrls.length;
      field.__dataUrls.push(...newPhotos.slice(0, remainingSlots));
    } else {
      field.__dataUrls.push(...newPhotos);
    }
    
    console.log(`âœ… Dodano zdjÄ™cia do ${fieldId}: ${newPhotos.length} nowych, Å‚Ä…cznie: ${field.__dataUrls.length}`);
    
    // WyÅ›wietl podglÄ…d wszystkich zdjÄ™Ä‡ w istniejÄ…cym kontenerze
    const previewsId = fieldId + 'Previews';
    const previews = $(previewsId);
    if (previews) {
      previews.innerHTML = '';
      field.__dataUrls.forEach((photoData, index) => {
        const img = document.createElement('img');
        img.src = photoData.dataUrl;
        img.classList.add('upload-preview');
        img.title = photoData.name;
        previews.appendChild(img);
      });
    }
  }
}

